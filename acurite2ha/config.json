{
  "name": "Acurite to Home Assistant",
  "version": "0.3.35",
  "slug": "acurite2ha",
  "description": "Acurite Sensors to Home Assistant via MQTT with Autodiscovery",
  "url": "https://github.com/skipnyip/skip_ha_addons",

  "startup": "services",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "usb": true,
  "options":
    {
    "mqtt_host": "192.168.1.100",
    "mqtt_port": 1883,
    "mqtt_user": "user",
    "mqtt_password": "pass",
    "mqtt_topic": "rtl_433",
    "mqtt_retain" : "true",
    "protocol": "-R 11 -R 40 -R 41 -R 55 -R 74",
    "whitelist_enable": "false",
    "whitelist": "",
    "expire_after": 0,
    "units": "si",
    "discovery_prefix": "homeassistant",
    "discovery_interval": 600,
    "auto_discovery": "true",
    "debug": "false"
  },
  "schema":
    {
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_password": "str",
    "mqtt_topic": "str",
    "mqtt_retain" : "bool",
    "protocol": "str",
    "whitelist_enable": "bool",
    "whitelist": "str",
    "expire_after": "int",
    "units": "str",
    "discovery_prefix": "str",
    "discovery_interval": "int",
    "auto_discovery": "bool",
    "debug": "bool"
   }
}

